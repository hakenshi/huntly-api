# Database Configuration
DATABASE_URL=postgresql://huntly_user:huntly_pass@localhost:5432/huntly
DB_POOL_SIZE=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=20

# JWT Authentication
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Search Configuration
SEARCH_CACHE_TTL=3600
MAX_SEARCH_RESULTS=1000
INDEXING_BATCH_SIZE=100

# Scraping Configuration
SCRAPING_DEFAULT_DELAY=1.0
SCRAPING_MAX_CONCURRENT_JOBS=5
SCRAPING_REQUEST_TIMEOUT=30
SCRAPING_SESSION_TIMEOUT=300
SCRAPING_MAX_RESULTS_PER_JOB=1000

# Scraping Rate Limits
SCRAPING_GOOGLE_MAPS_DELAY=1.0
SCRAPING_LINKEDIN_DELAY=2.0
SCRAPING_WEBSITE_DELAY=1.5

# Scraping Cache TTL
SCRAPING_JOB_TTL=86400
SCRAPING_SUGGESTIONS_TTL=21600
SCRAPING_RATE_LIMIT_TTL=60

# Proxy Configuration (Optional)
# SCRAPING_PROXY_URL=http://proxy:8080
# SCRAPING_PROXY_ROTATION=false
SCRAPING_USER_AGENT="Mozilla/5.0 (compatible; HuntlyBot/1.0; +https://huntly.com/bot)"
SCRAPING_RESPECT_ROBOTS_TXT=true

# Environment
ENVIRONMENT=development
DEBUG=true

# Frontend
FRONTEND_URL=http://localhost:3000

# Railway Production (example)
# DATABASE_URL=postgresql://postgres:password@host:port/railway
# REDIS_URL=redis://default:password@host:port
